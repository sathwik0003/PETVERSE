<!DOCTYPE html>
<html>
  <head>
    <title>Pet Listing</title>
    <style>
      body{
      background-color: #a1c4a161;
      }
      .hihi{
        display: flex;
        width: 100%;
        
      }
      
      .buy-buttons {
        display: flex;
        justify-content: space-between;
        margin: 20px;
      }
      .buy-buttons button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
      }
      .buy-buttons button:hover {
        background-color: #3e8e41;
      }
    </style>
  </head>
  <body>
    <header>
      <h1 style="margin-left: 700px;">Pet Listing</h1>
    </header>
    
    <div style="    background-color: #a1c4a161;">
      <% petinfos.forEach(pet => { %>
         <div class="hihi" style='border: 2px solid black;
         background-color: white;'>
          <div style="width: 60%;">
              <img src="<%= pet.image %>" alt="" style="height: 20vw;width: 20vw;">
          </div>
     <div class="hi">
      <p><strong>Title:</strong><%= pet.title %></p>
      <p><strong>Description:</strong> <%= pet.description  %></p>
      <p><strong>Category:</strong><%=pet.race %></p>
      <p><strong>Breed:</strong><%=pet.breed %></p>
      <p><strong>Gender:</strong><%= pet.gender%></p>
      <p><strong>Price:</strong><%=pet.price %></p>
      <p><strong>Age(months):</strong><%= pet.age %></p>
      <p><strong>Weight(grams):</strong><%= pet.weight %> </p>
      <p><strong>Owner:</strong><%= pet.name %></p>
      <p><strong>Location:</strong><%= pet.location %></p>
      <p><strong>Phone:</strong><%= pet.piphoneNumber %></p>
     </div>
         </div>
      <div class="buy-buttons">
        <form action="/sf/<%= pet._id %>" method="get">
          <button>Deal Done</button>
        </form>
          <form action="/sf" method="post">
            <button>Add new product</button> 
          </form>
        </div>
      <% }) %>
    </div>
    
    <script>
      // JavaScript code for the page
      const dealdone = document.querySelector('button:nth-of-type(1)');
      const newproduct = document.querySelector('button:nth-of-type(2)');
      
      dealdone.addEventListener('click', () => {
        alert('Thank you for your purchase!');
      });
      
    </script>
  </body>
</html>
